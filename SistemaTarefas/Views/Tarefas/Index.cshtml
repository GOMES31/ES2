@model IEnumerable<SistemaTarefas.Entities.Tarefa>

@{
    ViewData["Title"] = "Projetos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Tarefas</h1>

<p>
    <a asp-action="Create">Criar nova tarefa</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("ID")
                @*@Html.DisplayNameFor(model => model.id_tarefa)*@
            </th>
            <th>
                @Html.DisplayName("Hora de Início")
                @*@Html.DisplayNameFor(model => model.hora_inicio)*@
            </th>
            <th>
                @Html.DisplayName("Hora de Fim")
                @*@Html.DisplayNameFor(model => model.hora_fim)*@
            </th>
            <th>
                @Html.DisplayName("Estado")
                @*@Html.DisplayNameFor(model => model.estado)*@
            </th>
            <th>
                @Html.DisplayName("Descrição")
                @*@Html.DisplayNameFor(model => model.descricao)*@
            </th>
            <th>
                @Html.DisplayName("Preço por Hora")
                @*@Html.DisplayNameFor(model => model.precohora)*@
            </th>
            <th>
                @Html.DisplayName("Nome do Projeto")
                @*@Html.DisplayNameFor(model => model.Projetos.nomeProjeto)*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id_tarefa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hora_inicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hora_fim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.precohora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nome_projeto)
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.id_tarefa">Delete</a> |
                @if (item.estado == "curso")
                {
                    <a asp-action="Edit" asp-route-id="@item.id_tarefa">Edit</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
